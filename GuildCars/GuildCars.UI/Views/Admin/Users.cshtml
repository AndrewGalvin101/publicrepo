@model IEnumerable<GuildCars.Models.Tables.GetUserDetails>
@{
    ViewBag.Title = "Users";
}
<br/>
<h3>Users</h3>
@Html.ActionLink("Add a new User", "AddUser", "Admin")
<br/><br/>
@if (Model.Any())
{
<div style="border: 1px solid black;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Role
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@($"{user.LastName}")</td>
                    <td>@($"{user.FirstName}")</td>
                    <td>@($"{user.Email}")</td>
                    <td>@($"{user.Role}")</td>
                    <td>@Html.ActionLink("edit", "EditUser", "Admin", new { id = user.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
else
{
    <p>There aren't any Users.</p>
}
