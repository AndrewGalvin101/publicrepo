@model GuildCars.UI.Models.AddUserModel
@{
    ViewBag.Title = "AddUser";
}

<br />
<h3>Add User</h3>
<br />
@using (Html.BeginForm("AddUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddUser" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.Role, new { @class = "control-label" })
            <select class="form-control" id="role" name="Role">
                <option value="admin">Admin</option>
                <option value="sales">Sales</option>
                <option value="disabled">Disabled</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <input type="submit" class="btn btn-outline-dark" style="margin-top: 25px;" value="Save" />
                </div>
            </div>
        </div>
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

